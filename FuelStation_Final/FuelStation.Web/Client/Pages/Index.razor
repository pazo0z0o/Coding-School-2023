@code{
    public void GoManager()
    {
        navigationManager.NavigateTo($"landingpage/");
    }

public void GoCashier()
    {
        navigationManager.NavigateTo($"customerlist/");
    }

public void GoStaff()
    {
        navigationManager.NavigateTo($"itemlist/");
    }
    

}

