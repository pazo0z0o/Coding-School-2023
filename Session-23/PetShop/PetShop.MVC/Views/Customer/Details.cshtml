@model PetShop.MVC.Models.Customer.CustomerDetailsDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tin)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> @*Routing to Edit*@
    <a asp-action="Index">Back to List</a>
</div>

<hr />

<h2> Customer's Transactions</h2>
<br />

  <table class="table">
        <thead>
            <tr>
            <th>Transaction ID </th>
            <th>Date</th>
            <th>Employee</th>
            <th>Pet</th>
            <th>Pet Price</th>
            <th>Pet Food ID</th>
            <th>Pet Food Price</th>
            <th>Total Price</th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>      
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetPrice)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.PetFoodId)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetFoodPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
            </tr>
        }
    </tbody>
</table>

