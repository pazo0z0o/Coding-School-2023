@model PetShop.MVC.Models.Employee.EmployeeDetailsDTO
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalaryPerMonth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalaryPerMonth)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h2> Employees' Transactions</h2>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Transaction ID </th>
            <th>Date</th>
            <th>Customer</th>
            <th>Pet</th>
            <th>Pet Price</th>
            <th>Pet Food ID</th>
            <th>Pet Food Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetFoodId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetFoodPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
            </tr>
        }
    </tbody>
</table>
